<!--duoduo/write/write.wxml-->
<view class="content_area">
  <textarea placeholder='随手记一记' class="content" maxlength='1500'  value="{{content}}" auto-height='true' bindblur="input"></textarea>
</view>
 <view class="gallery">
<view class="item" wx:for="{{images}}" wx:key="">
<image src="{{item}}" data-src="{{item}}" bindtap="previewImage" mode="aspectFill" />

<!-- 删除按钮 -->
<view class="delete" bindtap="delete" data-index="{{index}}">X</view>
</view>
<view class="item" bindtap="chooseImage">
<view class='addIcon'>+</view>
</view>
</view>
<!-- 勿动 -->
<button class='bao' bindtap='sumbit' >保存</button>