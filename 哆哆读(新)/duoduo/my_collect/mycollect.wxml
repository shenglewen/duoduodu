<view class="shoucang">
  <view class="shoucang_k">
     <view class='{{tap==0?"hongk":"liebiao"}}' bindtap="linkbook">收藏的图书</view>
     <view class='{{tap==1?"hongk":"liebiao"}}' bindtap="linkshop">收藏的书房</view>
  </view>
</view>
<block wx:for="{{book}}" wx:for-index="i" wx:for-item="a" wx:key="productid" wx:if="{{tap==0?true:false}}">
<view class="kuang">
<view class="kuang_k">
        <view class="wenb_left">
    <image class="img_tu" src="{{a.thumb}}" mode="aspectFill">
    </image>
      </view>
<!--  文本图之类       -->

        <view class="wenb_right">
        <view class="wenb_li">
        <text>{{a.title}}</text>

        </view>
         <view class="wenb_rq">借阅日期:2018.06.29-2018.07.29<text class="hong">(03/20)</text></view>
            <view class="tou_tu">
           <view class="tou_yuan">

           <image class="img_tu2" src='{{a.face}}' mode="aspectFill">
</image>
           </view>
          <text class="w_name">{{a.username}}</text>
          <!-- 这是心-->
                 <span class="iconfont icon-xin6" id="{{a.productid}}" bindtap="collection"></span> 

          
          </view>
        </view>
</view>
</view>
</block>
