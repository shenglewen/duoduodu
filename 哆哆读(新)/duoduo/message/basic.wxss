radio .wx-radio-input{
width: 30rpx; 
height: 30rpx;
border-radius: 0%;

}
checkbox .wx-checkbox-input{
width: 30rpx; 
height: 30rpx;
}
radio .wx-radio-input.wx-radio-input-checked::before{
width: 32rpx;
height: 32rpx;
line-height: 30rpx;
text-align: center;
font-size:25rpx; 
color:#f45a61 ; 
background: #fff;
transform:translate(-50%, -50%) scale(1);
-webkit-transform:translate(-50%, -50%) scale(1);
}
checkbox .wx-checkbox-input.wx-radio-checkbox-checked::before{
width: 30rpx;
height: 30rpx;
line-height: 30rpx;
text-align: center;
font-size:30rpx; 
background-color: #e02e24;
border: 1rpx solid #e02e24; 
transform:translate(-50%, -50%) scale(1);
-webkit-transform:translate(-50%, -50%) scale(1);
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
border-color: #f45a61 ;
}
